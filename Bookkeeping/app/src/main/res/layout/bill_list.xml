<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_aim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="22dp"
        android:text="目的"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="198dp"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/txt_aim"
        android:layout_toRightOf="@+id/txt_aim"
        android:text="¥金额数"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_money"
        android:layout_marginStart="199dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/txt_aim"
        android:layout_toRightOf="@+id/txt_aim"
        android:text="所属资产" />

    <ImageView
        android:id="@+id/img_aim"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/txt_aim"
        android:layout_alignLeft="@+id/txt_aim"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-62dp"
        android:layout_marginLeft="-62dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/money" />
</RelativeLayout>